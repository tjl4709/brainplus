/*find the sum of an array*/
define size  2
define start 3
define cntr  4
enddef

//size = size of array
//start = first position in array
//uses cells 0-1
//ptr ends at sum
//returns sum in position after array
sum {
  @=0 =@size+
  @=@start@+@size@+1 =0
  for (@=0 =0; <@size; +) {
    @=1 =@start+@0
    @=@start@+@size@+1
    +@@1
    @=0
  }
  @=@start@+@size@+1
}

@=size =8
@=start =start+2
for (@=cntr =1; <=@size; +) { 
  @+@cntr =@cntr
  @=cntr
}
